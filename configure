#!/usr/bin/env bash
set -euo pipefail

missing=0

check_cmd() {
  local cmd="$1"
  local hint="$2"

  if command -v "$cmd" >/dev/null 2>&1; then
    echo "[ok] $cmd"
  else
    echo "[missing] $cmd"
    echo "         hint: $hint"
    missing=1
  fi
}

echo "Checking essential runtime tools..."
check_cmd bash "Install bash (e.g. apt install bash / brew install bash)."
check_cmd python3 "Install Python 3 (e.g. apt install python3 / brew install python)."
check_cmd sed "Install sed via coreutils or system package manager."
check_cmd pkg-config "Install pkg-config (e.g. apt install pkg-config)."
check_cmd ping "Install iputils-ping (e.g. apt install iputils-ping)."

if [[ ! -f index.html ]]; then
  echo "[missing] index.html"
  echo "         hint: run this script from the project root."
  missing=1
else
  echo "[ok] index.html present"
fi


if command -v pkg-config >/dev/null 2>&1; then
  if pkg-config --exists gtk+-3.0; then
    echo "[ok] gtk+-3.0 development files"
  else
    echo "[missing] gtk+-3.0 development files"
    echo "         hint: install libgtk-3-dev (Debian/Ubuntu) or gtk3-devel (Fedora)."
    missing=1
  fi
fi

if [[ "$missing" -ne 0 ]]; then
  echo
  echo "One or more required tools/files are missing."
  exit 1
fi

echo

echo "Environment looks good. You can now run: python3 -m http.server 8080 or make build-c"
